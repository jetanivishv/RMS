<% layout("layouts/boilerplate.ejs") %>
  <div class="container">
    <form action="/register" method="POST" class="needs-validation" id="animation" novalidate>
      <div class="card shadow" style="width: 38rem; margin-top: 100px">
        <div class="card-header">
          <h1 class="card-title display-6">Register Yourself</h1>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input type="text" class="form-control" id="username" name="user[username]" required />
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input type="email" class="form-control" name="user[email]" id="email" required />
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <div class="input-group">
              <input type="password" class="form-control" name="user[password]" id="password" required />
              <%- include("../partials/eye.ejs") %>
                <div class="valid-feedback">
                  Looks good!
                </div>
            </div>
          </div>
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success mt-4">Register</button>
      </div>
    </form>
  </div>

  <script src="/javascripts/showHidePassword.js"></script>
  <script src="/javascripts/clientSideValidation.js"></script>
